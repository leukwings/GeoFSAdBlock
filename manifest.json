{
  "manifest_version": 2,
  "name": "GeoFS Ad Blocker",
  "version": "1.0",
  "description": "Automatically removes ads from GeoFS.",
  "permissions": [
    "activeTab"
  ],
  "icons": {
    "48": "logo.png"  // Pfad zum Logo-Bild
  },
  "content_scripts": [
    {
      "matches": ["*://*.geo-fs.com/*"],  // Stelle sicher, dass die Domain korrekt ist
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "logo.png", // Icon in der Toolbar
    "default_popup": "popup.html" // Optional: Popup, wenn das Icon geklickt wird
  }
}
